<section class="about-text ptb-100">
    <section class="section-title">
        <div class="container text-center">
            <h2>{{ page.title }}</h2>
            <span class="bordered-icon"><i class="fa fa-circle-thin"></i></span>
        </div>
    </section>

    <div class="container">
        <div class="row">
            {% for column in page.header.columns %}
                    <div class="col-md-4">
                        <p>{{ column.content }}</p>
                    </div>
            {% endfor %}
        </div>
    </div>
</section>
